<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_clear"
                style="@style/NumberButton"
                android:text="C" />
            <TextView
                android:id="@+id/btn_r"
                style="@style/NumberButton"
                android:text="("/>
            <TextView
                android:id="@+id/btn_l"
                style="@style/NumberButton"
                android:text=")" />
            <TextView
                android:id="@+id/btn_del"
                style="@style/NumberButton"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_7"
                style="@style/ActionButton"
                android:text="7" />
            <TextView
                android:id="@+id/btn_8"
                style="@style/ActionButton"
                android:text="8" />
            <TextView
                android:id="@+id/btn_9"
                style="@style/ActionButton"
                android:text="9" />
            <TextView
                android:id="@+id/btn_umn"
                style="@style/NumberButton"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_4"
                style="@style/ActionButton"
                android:text="4" />
            <TextView
                android:id="@+id/btn_5"
                style="@style/ActionButton"
                android:text="5" />
            <TextView
                android:id="@+id/btn_6"
                style="@style/ActionButton"
                android:text="6" />
            <TextView
                android:id="@+id/btn_plus"
                style="@style/NumberButton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_1"
                style="@style/ActionButton"
                android:text="1" />
            <TextView
                android:id="@+id/btn_2"
                style="@style/ActionButton"
                android:text="2" />
            <TextView
                android:id="@+id/btn_3"
                style="@style/ActionButton"
                android:text="3" />
            <TextView
                android:id="@+id/btn_mun"
                style="@style/NumberButton"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_zn"
                style="@style/ActionButton"
                android:text="." />
            <TextView
                android:id="@+id/btn_0"
                style="@style/ActionButton"
                android:text="0" />
            <TextView
                android:id="@+id/btn_back"
                style="@style/NumberButton"
                android:text="Back" />
            <TextView
                android:id="@+id/btn_rez"
                style="@style/NumberButton"
                android:text="=" />

        </LinearLayout>

</LinearLayout>

</LinearLayout>